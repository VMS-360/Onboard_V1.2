@model IEnumerable<Onboard.Web.UI.Models.HRViewModels.ActivityViewModel>
    <div class="project-list">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="project-title">
                        Date
                    </th>
                    <th class="project-title">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model)
                {
                    <tr>
                        <td class="project-title">
                            @activity.DateString
                            <br />
                            @activity.TimeString
                        </td>
                        <td class="project-title">
                            @activity.Activity
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
