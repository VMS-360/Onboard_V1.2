@model Onboard.Web.UI.Models.HRViewModels.CandidateViewModel

@Html.HiddenFor(m => m.TotalTasks)
@Html.HiddenFor(m => m.RemainingTasks)

<div class='widget style1' id="div-onboard-btn">
    <div class="row">
        <div class="col-xs-2 short-onboard">
            <i class="fa fa-bars fa-5x"></i>
        </div>
        <div class="col-xs-2 large-onboard">
            <i class="fa fa-exclamation-circle fa-5x"></i>
        </div>
        <div class="col-xs-10 text-right short-onboard">
            <span> Remaining tasks </span>
            <h2 class="font-bold"> <label id="label-remaining-tasks">@Model.RemainingTasks</label></h2>
        </div>
        <div class="col-xs-10 large-onboard" style="padding-top: 12px;">
            <span class="fa fa-3x">Onboard Candidate</span> 
            <br />
            <span class="fa fa-1x">Click to complete process.</span>
        </div>

        @*<div class="col-xs-12 large-onboard">
            <button class="btn btn-primary btn-lg dim" type="button" id="button-onboard"><i class="fa fa-bars fa-3x"></i> Onboard Candidate</button>
        </div>*@
    </div>
</div>

<div class="row">
    @if (Model.EnrollmentCheckList.Count > 0)
    {
        <div class="col-lg-12">
            <div class="ibox panel @Model.EnrollChecklistString">
                <div class="panel-heading">
                    <a class="collapse-link pull-right">
                        <i class="fa fa-chevron-up button-white"></i>
                    </a>
                    Themesoft Task list
                </div>
                <div class="panel-body ibox-content" id="div-enrollment-checklist">
                    @Html.Partial("_TaskListItem", Model.EnrollmentCheckList)
                </div>
            </div>
        </div>
    }
    @if (Model.VendorCheckList.Count > 0)
    {
        <div class="col-lg-12">
            <div class="panel ibox @Model.VendorChecklistString">
                <div class="panel-heading">
                    <a class="collapse-link pull-right">
                        <i class="fa fa-chevron-up button-white"></i>
                    </a>
                    Vendor Task list
                </div>
                <div class="panel-body ibox-content" id="div-vendor-checklist">
                    @Html.Partial("_TaskListItem", Model.VendorCheckList)
                </div>
            </div>
        </div>
    }
    @if (Model.ClientCheckList.Count > 0)
    {
        <div class="col-lg-12">
            <div class="panel ibox @Model.ClientChecklistString">
                <div class="panel-heading">
                    <a class="collapse-link pull-right">
                        <i class="fa fa-chevron-up button-white"></i>
                    </a>
                    Client Task list
                </div>
                <div class="panel-body ibox-content" id="div-client-checklist">
                    @Html.Partial("_TaskListItem", Model.ClientCheckList)
                </div>
            </div>
        </div>
    }
</div>