@model Onboard.Web.UI.Models.MaintenanceViewModels.OnboardUserViewModel
    @Html.ValidationSummary("The following errors occurred:")

    @Html.HiddenFor(m => m.UserId)
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label>User Name *</label>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>First Name *</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" type="password" placeholder="Password" class="form-control">
            
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Internal *</label>
            <select asp-for="Internal"
                    asp-items="Model.Internals" class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Last Name *</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Role *</label>
            <select asp-for="RoleId"
                    asp-items="Model.Roles" class="form-control"></select>
        </div>
    </div>
</div>
    