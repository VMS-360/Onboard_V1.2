@model Onboard.Web.UI.Models.DatabaseViewModels.EndClientsViewModel
@Html.ValidationSummary("The following errors occurred:")
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div class="row">
                <div class="col-xs-pull-4">
                    <i class="fa fa-user-plus fa-5x primary-color"></i>
                </div>
            </div>
            <h4 class="modal-title">Add End Client</h4>
            <small class="font-bold">Complete all required fields to add an end client </small>
        </div>
        <div class="modal-body">
            <form id="form-add-endclient" action="#" class="">
                <div id="div-add-endclient">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Client Name *</label>
                                <input asp-for="CompanyName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Tax ID *</label>
                                <input asp-for="TaxId" class="form-control" />
                            </div>
                            @*<div class="form-group">
                                    <label>Primary Contact</label>
                                    <input asp-for="AddressLine2" type="email" class="form-control" />
                                </div>*@
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Address *</label>
                                <input id="AddressLine1" name="AddressLine1" type="text" class="form-control">
                            </div>
                            <div class="form-group form-group-height">
                                <div class="col-sm-4 no-padding">
                                    <label>City *</label>
                                    <input id="City" name="City" type="text" class="form-control">
                                </div>
                                <div class="col-sm-4">
                                    <label>State *</label>
                                    <input id="State" name="State" type="text" class="form-control">
                                </div>
                                <div class="col-sm-4 no-padding">
                                    <label>Zip *</label>
                                    <input id="Zip" name="Zip" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" action="add-end-client-save">Save</button>
        </div>
    </div>
</div>
