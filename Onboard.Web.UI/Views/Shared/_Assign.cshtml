@model Onboard.Web.UI.Models.HRViewModels.AssignEnrollemntViewModel

<div class="modal-dialog">
    <div class="modal-content animated fadeIn">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div class="row">
                <div class="col-xs-pull-4">
                    <i class="fa fa-arrow-right fa-5x primary-color"></i>
                </div>
            </div>
            <h4 class="modal-title">Assign Candidate</h4>
            <small>Select the employee whom you want to assign this candidate to.</small>
        </div>
        <div class="modal-body" id="alert-append">
            <p>&nbsp;</p>
            <form method="get" class="form-horizontal" id="form-enrollment-assign">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                @*<input type="hidden" id="EnrollmentId" value="@Model.EnrollmentId" />*@
                @Html.HiddenFor(m => m.EnrollmentId)
                <div class="form-group">
                    <label class="col-sm-12">Assigned To:</label>
                    <div class="col-sm-12">
                        <select asp-for="HRUser"
                                asp-items="Model.HRUsers" class="form-control m-b"></select>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" action="assign-enrollment-save">Save</button>
        </div>
    </div>
</div>
