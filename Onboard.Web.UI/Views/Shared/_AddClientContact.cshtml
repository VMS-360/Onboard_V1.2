@model Onboard.Web.UI.Models.HRViewModels.ClientContactViewModel
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div class="row">
                <div class="col-xs-pull-4">
                    <i class="fa fa-user-plus fa-5x primary-color"></i>
                </div>
            </div>
            <h4 class="modal-title">Add Client Contact</h4>
            <small class="font-bold">Complete all required fields to add contact details for client : @Model.ClientName </small>
        </div>
        <div class="modal-body">
            <form id="form-client-contact" action="#" class="">
                @Html.ValidationSummary("The following errors occurred:")
                @Html.HiddenFor(m => m.ClientId)
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label id="lbl-email">Contact Name *</label>
                            <input id="Name" name="Name" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label id="lbl-email">Email </label>
                            <input id="Email" name="Email" type="email" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label id="lbl-phone">Phone </label>
                            @(Html.Kendo().MaskedTextBox()
                                      .Name("Phone")
                                      .Mask("(999) 000-0000")
                                      .Value("")
                            )
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" action="add-client-contact-save">Save</button>
        </div>
    </div>
</div>
